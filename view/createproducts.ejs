<%- include('./partials/header') %>
<%- include('./partials/bg-video') %>

<% if(success.length>0){ %>
  <div class= "fixed top-16 left-1/2 -translate-x-1/2 z-50 
              px-4 py-2 rounded-lg
              bg-gradient-to-r from-blue-500 to-indigo-500
              shadow-lg ">
    <span class="text-white text-sm font-medium">
      <%= success %>
    </span>
  </div>
<% } %>

<div class="relative z-10 w-full min-h-screen
            bg-white/16 
            px-4 sm:px-8 lg:px-20 py-24 -my-10 hover:shadow-xl hover:-translate-y-1 transition duration-300"> <!-- ðŸ”½ pt reduced -->

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8
              flex flex-col lg:flex-row gap-6">

    <!-- SIDEBAR (HEIGHT AUTO) -->
    <aside class="w-full lg:w-[22%]
                  bg-white/80 backdrop-blur
                  rounded-xl shadow-md
                  border border-white/50
                  p-3
                  self-start hover:shadow-xl hover:-translate-y-1 transition duration-300">   <!-- ðŸ”¥ height = content -->

      <h3 class="text-xs font-semibold text-gray-500 mb-2">
        ADMIN MENU
      </h3>

      <nav class="flex flex-row lg:flex-col gap-2 ">
        <a href="/admin"
           class="px-3 py-2 rounded-md text-sm font-medium
                  hover:bg-blue-50 hover:text-blue-600 transition">
          All Products
        </a>

        <a href="/owner/admin"
           class="px-3 py-2 rounded-md text-sm font-medium
                  bg-blue-50 text-blue-600 shadow-sm">
          Create New Product
        </a>
      </nav>
    </aside>

    <!-- FORM CARD -->
    <main class="flex-1
                 bg-white/90 backdrop-blur
                 rounded-xl shadow-lg
                 border border-white/60
                 p-4 sm:p-5 md:p-6 hover:shadow-xl hover:-translate-y-1 transition duration-300">  <!-- ðŸ”½ padding reduced -->

      <h2 class="text-lg sm:text-xl font-bold mb-4 hover:shadow-xl hover:-translate-y-1 transition duration-300">
        Create New Product
      </h2>

      <form
        autocomplete="off"
        action="/owner/product/create"
        method="post"
        enctype="multipart/form-data"
        class="space-y-8">  <!-- ðŸ”½ space reduced -->

        <!-- PRODUCT DETAILS -->
        <section class="bg-gray-50 rounded-lg p-4 hover:shadow-xl hover:-translate-y-1 transition duration-300">
          <h3 class="text-sm sm:text-base font-semibold mb-3">
            Product Details
          </h3>

          <div class="space-y-3">

            <div>
              <label class="block mb-1 text-sm font-medium">
                Product Image
              </label>
              <input
                name="image"
                type="file"
                class="w-full rounded-md border border-gray-300 text-sm
                       file:mr-3 file:py-1.5 file:px-3
                       file:border-0 file:rounded-md
                       file:bg-gradient-to-r file:from-blue-500 file:to-indigo-500
                       file:text-white
                       hover:file:opacity-90 transition"
              />
            </div>

            <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 ">
              <input name="name" type="text" placeholder="Product Name"
                     class="border p-2.5 rounded-md text-sm focus:ring-2 focus:ring-blue-400 outline-none" />

              <input name="price" type="number" placeholder="Product Price"
                     class="border p-2.5 rounded-md text-sm focus:ring-2 focus:ring-blue-400 outline-none" />

              <input name="discount" type="number" placeholder="Discount Price"
                     class="border p-2.5 rounded-md text-sm focus:ring-2 focus:ring-blue-400 outline-none" />
            </div>
          </div>
        </section>

        <!-- PANEL DETAILS -->
        <section class="bg-gray-50 rounded-lg p-4 hover:shadow-xl hover:-translate-y-1 transition duration-300">
          <h3 class="text-sm sm:text-base font-semibold mb-3">
            Panel Colors
          </h3>

          <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
            <input name="bgcolor" type="text" placeholder="Background Color"
                   class="border p-2.5 rounded-md text-sm focus:ring-2 focus:ring-blue-400 outline-none" />

            <input name="panelcolor" type="text" placeholder="Panel Color"
                   class="border p-2.5 rounded-md text-sm focus:ring-2 focus:ring-blue-400 outline-none" />

            <input name="textcolor" type="text" placeholder="Text Color"
                   class="border p-2.5 rounded-md text-sm focus:ring-2 focus:ring-blue-400 outline-none" />
          </div>
        </section>

        <!-- SUBMIT -->
        <div class="flex justify-end">
          <button
            type="submit"
            class="px-6 py-2.5 rounded-lg
                   bg-gradient-to-r from-blue-500 to-indigo-500
                   text-white text-sm font-semibold
                   hover:shadow-lg hover:-translate-y-0.5
                   transition">
            Create Product
          </button>
        </div>

      </form>

    </main>
  </div>
</div>

<%- include('./partials/footer') %>
