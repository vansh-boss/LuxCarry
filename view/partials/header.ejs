<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet" />
      <!-- RESPONSIVE CSS -->
  
<link rel="stylesheet" href="/css/responsive.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="font-['helvetica_now_display']  pt-16 ">

<nav
  class="fixed top-0 left-0 z-50 w-full
         bg-black text-white border-b border-black">

  <div
    class="max-w-7xl mx-auto
           px-4 sm:px-6
           py-3
           flex flex-col sm:flex-row
           sm:items-center sm:justify-between
           gap-3">

    <!-- LOGO -->
<!-- LuxCarry Bag Icon Inline SVG (No File Needed) -->
<!-- LuxCarry Logo + Text -->
<div class="flex items-center gap-2  hover:scale-105 transition-transform duration-300">
  <!-- Bag Icon -->
  <svg
    class="w-12 h-12 md:w-16 md:h-16 drop-shadow-lg"
    viewBox="0 0 64 64"
    fill="none"
    xmlns="http://www.w3.org/2000/svg"
  >
    <!-- Bag body -->
    <path
      d="M16 26C16 21.6 19.6 18 24 18H40C44.4 18 48 21.6 48 26V46C48 49.3 45.3 52 42 52H22C18.7 52 16 49.3 16 46V26Z"
      fill="url(#bagGradient)"
      stroke="#D4AF37"
      stroke-width="2"
    />

    <!-- Bag handle -->
    <path
      d="M24 20C24 14.5 28.5 10 34 10C39.5 10 44 14.5 44 20"
      stroke="#D4AF37"
      stroke-width="4"
      stroke-linecap="round"
    />

    <!-- Gradient -->
    <defs>
      <linearGradient id="bagGradient" x1="16" y1="18" x2="48" y2="52">
        <stop offset="0%" stop-color="#F5D27A"/>
        <stop offset="100%" stop-color="#C9A227"/>
      </linearGradient>
    </defs>
  </svg>

  <!-- LuxCarry Text -->
  <h1 class="text-3xl font-bold bg-clip-text text-transparent 
             bg-gradient-to-r from-yellow-400 via-white to-yellow-300">
    LuxCarry
  </h1>
</div>




    <% var loggedin = typeof loggedin !== "undefined" ? loggedin : true %>
    <% if(loggedin){ %>   
   <div class="flex items-center gap-6 text-white font-medium">

  <a href="/shop"
     class="relative pb-1 transition-all duration-300 hover:text-blue-300
            after:absolute after:left-0 after:bottom-0 after:h-[2px] after:w-0
            after:bg-blue-300 after:transition-all after:duration-300
            hover:after:w-full hover:translate-x-1 hover:-translate text-lg">
    Shop
  </a>

  <a href="/cart"
     class="relative pb-1 transition-all duration-300 hover:text-blue-300
            after:absolute after:left-0 after:bottom-0 after:h-[2px] after:w-0
            after:bg-blue-300 after:transition-all after:duration-300
            hover:after:w-full hover:translate-x-1 hover:-translate text-lg" >
    Cart
  </a>

  <a href="/admin"
     class="relative pb-1 transition-all duration-300 hover:text-blue-300
            after:absolute after:left-0 after:bottom-0 after:h-[2px] after:w-0
            after:bg-blue-300 after:transition-all after:duration-300
            hover:after:w-full hover:translate-x-1 hover:-translate text-lg
">
    My Account
  </a>

  <a href="/owner/admin"
     class="relative pb-1 transition-all duration-300 hover:text-blue-300
            after:absolute after:left-0 after:bottom-0 after:h-[2px] after:w-0
            after:bg-blue-300 after:transition-all after:duration-300
            hover:after:w-full hover:translate-x-1 hover:-translate text-lg">
    Create Product
  </a>

  <!-- Logout button style -->
  <a href="/user/logout"
     class="ml-4 px-4 py-1.5 rounded-md border border-red-400 text-red-400
            transition-all duration-300 hover:bg-red-500 hover:text-white
            hover:shadow-lg hover:translate-x-1 hover:-translate">
    Logout
  </a>

</div>

      </div>
    <% } %>

    </nav>
 

</body>
